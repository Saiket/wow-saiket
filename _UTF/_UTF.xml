    * _UTF by Saiket                                                           *
    * _UTF.xml - Tabbed container frame.                                       *
    *************************************************************************-->


<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
	<Button name="_UTFFrameTabTemplate" inherits="CharacterFrameTabButtonTemplate" virtual="true">
		<HitRectInsets>
			<AbsInset left="6" right="6" top="0" bottom="6"/>
		</HitRectInsets>

		<Scripts>
			<OnClick>
				_UTF.Tab.OnClick();
			</OnClick>
			<OnLoad>
				_UTF.Tab.OnLoad();
			</OnLoad>
		</Scripts>
	</Button>




	<!-- Main Frame -->
	<Frame name="_UTFFrame" parent="UIParent" toplevel="true" frameStrata="DIALOG" movable="true" enableMouse="true" clampedToScreen="true" hidden="true">
		<TitleRegion setAllPoints="true"/>
		<Size>
			<AbsDimension x="256" y="128"/>
		</Size>
		<Anchors>
			<Anchor point="TOP"/>
		</Anchors>

		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>

		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitleText" inherits="GameFontNormal" text="_UTF_FRAME_TITLE">
					<Anchors>
						<Anchor point="TOPRIGHT">
							<Offset>
								<AbsDimension x="-42" y="-12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-4" y="-4"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>

		<Scripts>
			<OnHide>
				_UTF.OnHide();
			</OnHide>
			<OnShow>
				_UTF.OnShow();
			</OnShow>
			<OnLoad>
				_UTF.OnLoad();
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
