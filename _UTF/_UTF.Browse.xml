<!--****************************************************************************
    * _UTF by Saiket                                                           *
    * _UTF.Browse.xml - Frame for finding individual characters by ID or by    *
    *   automatically scanning for ones that exist in the current font.        *
    *************************************************************************-->


<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
	<Font name="_UTFBrowseFrameGlyphFontTemplate" font="Fonts\ARIALN.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="30"/>
		</FontHeight>
		<Color r="1.0" g="0.82" b="0"/>
	</Font>




	<!-- Browse Frame -->
	<Button name="$parentTab1" parent="_UTFFrame" inherits="_UTFFrameTabTemplate" text="Browse" id="1"/>
	<Frame name="$parentPane1" parent="_UTFFrame" hidden="true" id="1">
		<Size>
			<AbsDimension x="1" y="1"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="8" y="-8"/>
				</Offset>
			</Anchor>
			<Anchor point="BOTTOMRIGHT">
				<Offset>
					<AbsDimension x="-8" y="8"/>
				</Offset>
			</Anchor>
		</Anchors>

		<Frames>
			<EditBox name="$parentValue" autoFocus="false" letters="7">
				<Size>
					<AbsDimension x="48" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="21" y="-10"/>
						</Offset>
					</Anchor>
				</Anchors>

				<HitRectInsets>
					<AbsInset left="0" right="0" top="6" bottom="6"/>
				</HitRectInsets>

				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
							<Size>
								<AbsDimension x="30" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="-10" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.1171875" top="0" bottom="1.0"/>
						</Texture>
						<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
							<Size>
								<AbsDimension x="30" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="RIGHT">
									<Offset>
										<AbsDimension x="10" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.8828125" right="1.0" top="0" bottom="1.0"/>
						</Texture>
						<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
							<Size>
								<AbsDimension x="20" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT">
									<Offset>
										<AbsDimension x="10" y="0"/>
									</Offset>
								</Anchor>
								<Anchor point="RIGHT">
									<Offset>
										<AbsDimension x="-10" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
							<TexCoords left="0.1171875" right="0.8046875" top="0" bottom="1.0"/>
						</Texture>
					</Layer>
				</Layers>
				<FontString inherits="ChatFontNormal"/>

				<Scripts>
					<OnEscapePressed>
						_UTF.Browse.Value.OnEscapePressed();
					</OnEscapePressed>
					<OnTextChanged>
						_UTF.Browse.Value.OnTextChanged();
					</OnTextChanged>
					<OnLoad>
						_UTF.Browse.Value.OnLoad();
					</OnLoad>
				</Scripts>
			</EditBox>


			<Button name="$parentGlyph">
				<Size>
					<AbsDimension x="96" y="1"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-4" y="-16"/>
						</Offset>
					</Anchor>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-4" y="16"/>
						</Offset>
					</Anchor>
				</Anchors>

				<HitRectInsets>
					<AbsInset left="8" right="8" top="8" bottom="8"/>
				</HitRectInsets>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
					<BackgroundInsets>
						<AbsInset left="11" right="12" top="12" bottom="11"/>
					</BackgroundInsets>
					<TileSize>
						<AbsValue val="32"/>
					</TileSize>
					<EdgeSize>
						<AbsValue val="32"/>
					</EdgeSize>
				</Backdrop>

				<ButtonText name="$parentText">
					<Size>
						<AbsDimension x="0" y="0"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</ButtonText>
				<NormalFont inherits="_UTFBrowseFrameGlyphFontTemplate"/>
				<HighlightFont inherits="_UTFBrowseFrameGlyphFontTemplate">
					<Color r="1.0" g="1.0" b="1.0"/>
				</HighlightFont>
				<DisabledFont inherits="_UTFBrowseFrameGlyphFontTemplate">
					<Color r="0.5" g="0.5" b="0.5"/>
				</DisabledFont>

				<Scripts>
					<OnClick>
						_UTF.Browse.GlyphOnClick();
					</OnClick>
				</Scripts>
			</Button>


			<Frame name="$parentGlyphBackground">
				<Size>
					<AbsDimension x="1" y="1"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentGlyphText"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentGlyphText"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color r="0.1" g="0.1" b="0.1"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnMouseWheel>
				_UTF.Browse.OnMouseWheel();
			</OnMouseWheel>
		</Scripts>
	</Frame>
</Ui>
