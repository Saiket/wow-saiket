<!--****************************************************************************
    * _Misc by Saiket                                                          *
    * _Misc.ColorPickerFrame.xml - Modifies the color picker frame.            *
    *************************************************************************-->


<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
	<EditBox name="$parentHexEditBox" parent="ColorPickerFrame" inherits="InputBoxTemplate" letters="6">
		<Size>
			<AbsDimension x="96" y="20"/>
		</Size>
		<Anchors>
			<Anchor point="RIGHT" relativeTo="ColorPickerOkayButton" relativePoint="LEFT"/>
			<Anchor point="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="16" y="12"/>
				</Offset>
			</Anchor>
		</Anchors>

		<Scripts>
			<OnHide>
				_Misc.ColorPickerFrame.OnHide( self );
			</OnHide>
			<OnEscapePressed>
				_Misc.ColorPickerFrame.OnEscapePressed( self );
			</OnEscapePressed>
			<OnTextChanged>
				_Misc.ColorPickerFrame.OnTextChanged( self );
			</OnTextChanged>
			<OnLoad>
				_Misc.ColorPickerFrame.OnLoad( self );
			</OnLoad>
		</Scripts>
	</EditBox>
</Ui>
